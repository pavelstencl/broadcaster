{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "src/testing-library",
    "src/**/*.spec.ts"
  ]
}
