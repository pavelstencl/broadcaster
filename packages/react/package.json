{
  "name": "@broadcaster/react",
  "version": "0.0.1",
  "description": "React implementation of Broadcaster package. Extension of a Broadcast Channel API. Allows to send messages to multiple windows (tabs, workers, iframes,...) and detect opened windows.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "clean": "npx rimraf ./dist",
    "lint": "eslint ./src --fix",
    "prepublish": "npm run clean && npx tsc",
    "test": "jest",
    "test-watch": "npm run test -- --watch --coverage",
    "watch": "npx tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pavelstencl/broadcaster.git"
  },
  "keywords": [
    "broadcast",
    "channel",
    "BroadcastChannel",
    "share",
    "state",
    "tabs",
    "windows",
    "browser",
    "workers",
    "connect",
    "connection",
    "cross",
    "react",
    "hook"
  ],
  "author": "Pavel Stencl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pavelstencl/broadcaster/issues"
  },
  "homepage": "https://github.com/pavelstencl/broadcaster/packages/react-broadcaster#readme",
  "dependencies": {
    "@broadcaster/core": "file:../broadcaster"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.0",
    "@types/react": "^18.2.37",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
