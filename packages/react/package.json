  "bugs": {
    "url": "https://github.com/pavelstencl/broadcasterJS/issues"
  },
  "homepage": "https://github.com/pavelstencl/broadcasterJS/tree/main/packages/react#readme",
  "devDependencies": {
    "@testing-library/react": "^14.1.0",
    "@types/react": "^18.2.37",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependencies": {
    "@broadcaster/core": "^2.1.0",
    "react": "^18.2.0",
